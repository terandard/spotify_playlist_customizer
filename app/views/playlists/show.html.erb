<h1>Playlist Details</h1>

<%= link_to 'Back', playlists_path %>

<%= link_to 'Recommendations', recommendations_playlist_path(@current_playlist.identifier) %>
<%= link_to 'Duplicate', playlist_duplicate_path(@current_playlist.identifier) %>
<%= link_to 'Sync', sync_playlist_path(@current_playlist.identifier), data: { "turbo-method": :post } %>

<div>
  <% @current_playlist.playlist_tracks.includes(track: :artist).each do |pt| %>
    <%= render 'track', track: pt.track %>
  <% end %>
</div>